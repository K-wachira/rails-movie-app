<div class="container">
  <form class="d-flex  mx-auto my-4 justify-content-center">
    <%= form_with(url: search_path, method: 'get') do | form | %>
      <div class="form-group mx-1 my-5">
        <label for="formGroupExampleInput" class="form-label">Year: </label>
        <%= form.select :year, (1990..2023).each { | year | [ year, year] } , class: 'form-select me-2  dropdown-menu' %>
      </div>
      <div class="form-group mx-1 my-5">
        <label for="formGroupExampleInput" class="form-label">Type: </label>
        <%= form.select :type, {'Movie' => 'movie', "Series" => 'series', "Episode" => 'episode' } , class: 'form-select me-2  dropdown-menu' %>
      </div>
      <div class="form-group mx-1 my-2 input-sm">
        <label for="formGroupExampleInput" class="form-label">Search query</label>
        <%= hidden_field_tag :page, 0 %>
        <%= text_field_tag :search, request.params['search'], placeholder: 'Eg. star wars', class: 'form-control me-2 input-sm', style: "line-height: 0" %>
      </div>
      <div class="form-group mx-1 my-2">
        <label for="formGroupExampleInput" class="form-label"></label> <br/> 
        <%= button_tag 'Filter', class: 'btn btn-outline-success' %>
      </div>
    <% end %>
  </form>
    <h1 class="align-center">Search Results</h1>
    <%= render "shared/searchcard", movies: @response["Search"] %>
</div>
