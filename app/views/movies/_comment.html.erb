    <div class="container overflow-auto my-5 py-5 boarder-0">
      <div class="row d-flex boarder-0">
        <div class="col-md-12 col-lg-12 col-xl-8 boarder-0">
          <div class="card boarder-0">
            <% if @movie_comments.respond_to? :each  %>
              <% @movie_comments.each do | comment | %>
                <div class="card-body boarder-0">
                  <div class="d-flex flex-start align-items-center boarder-0">
                    <img class="rounded-circle shadow-1-strong me-3"
                      src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(19).webp" alt="avatar" width="60"
                      height="60" />
                    <div>
                      <h6 class="fw-bold text-primary mb-1">Lily Coleman</h6>
                      <p class="text-muted small mb-0">
                        Shared publicly - Jan 220
                      </p>
                    </div>
                  </div>

                  <p class="mt-3 mb-4 pb-2">
                    <%= comment['comment_text'] %>
                  </p>

                  <div class="small d-flex justify-content-start">
                    <a href="#!" class="d-flex align-items-center me-3">
                      <i class="far fa-thumbs-up me-2"></i>
                      <p class="mb-0">Like</p>
                    </a>
                    <a href="#!" class="d-flex align-items-center me-3">
                      <i class="far fa-comment-dots me-2"></i>
                      <p class="mb-0">Comment</p>
                    </a>
                    <a href="#!" class="d-flex align-items-center me-3">
                      <i class="fas fa-share me-2"></i>
                      <p class="mb-0">Share</p>
                    </a>
                  </div>
                </div>
              <% end %>
            <% else %>
              <p class="mt-3 mb-4 pb-2">
               No comments !!!
              </p>
            <% end %>
            <%= form_with model: @comment, url: add_comments_path do |form| %>
              <div class="card-footer py-3 border-0" style="background-color: #f8f9fa;">
                <div class="d-flex flex-start w-100">
                  <img class="rounded-circle shadow-1-strong me-3"
                    src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(19).webp" alt="avatar" width="40"
                    height="40" />
                  <div class="form-outline w-100">
                    <%= hidden_field :imdbID, @movie_response["imdbID"] %>
                    <%= text_area :comment_text, nil, placeholder: 'Comment',rows:'4', style:'background: #fff;', class: 'form-control me-2' %>
                    <span> Comment has spoilers?</span>
                    <input type="radio" id="has_spoiler_no" name="comment[has_spoiler]" value="no" checked="checked" /> No
                    <input type="radio" id="has_spoiler_yes" name="comment[has_spoiler]" value="yes" /> Yes.
                  </div>
                </div>
                <div class="float-end mt-2 pt-1">
                  <%= button_tag 'Post comment', class: 'btn btn-primary btn-sm' %>
                  <button type="button" class="btn btn-outline-primary btn-sm">Cancel</button>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
